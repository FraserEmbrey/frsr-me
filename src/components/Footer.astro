---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="w-full bg-[rgba(0,0,0,0.6)] pt-12 pb-10 sm:pt-24 sm:pb-14 px-4">
    <div class="max-w-3xl mx-auto">
        <div class="flex flex-row justify-between items-stretch gap-8">
            <div class="flex-1 flex flex-col items-start gap-2 text-left">
                {
                    navLinks.map((link) => (
                        <a
                            class="font-bold font-sans text-white text-lg hover:underline hover:underline-offset-5 hover:opacity-60 transition-all"
                            href={link.href}
                        >
                            {link.text}
                        </a>
                    ))
                }
            </div>
            <div class="block w-[3px] min-h-full bg-[rgba(255,255,255,0.33)] mx-6 rounded-full"></div>
            <div class="flex-1 flex flex-col items-start gap-2 text-left">
                {
                    socialLinks.map((link) => (
                        <a
                            class="group font-bold font-sans text-white text-lg flex items-center gap-1 transition-all"
                            href={link.href}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <span class="hover:underline hover:underline-offset-5 hover:opacity-60">{link.text}</span>
                            <span class="inline-block transition-transform group-hover:translate-x-1 group-hover:-translate-y-1">â†—</span>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</footer>
