---
type Props = {
    date: Date;
    locale?: string;
    short?: boolean;
};

const { date, short = false } = Astro.props as Props;
const locale = Astro.props.locale ?? 'en-GB';

const formatOptions: Intl.DateTimeFormatOptions = short ? { month: 'long', year: 'numeric' } : { day: '2-digit', month: 'long', year: 'numeric' };
---

{date instanceof Date && !isNaN(date.getTime()) ? <time datetime={date.toISOString()}>{date.toLocaleDateString(locale, formatOptions)}</time> : null}
